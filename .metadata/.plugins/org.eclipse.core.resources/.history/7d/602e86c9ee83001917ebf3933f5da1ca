package keuangan;

public class HargaTernak {
	private double ppn = 10.5 ;
	
	public int harga_sapi = 9000 ;
	public int harga_kambing = 1500 ;
	public int harga_ayam = 20 ;
	
	
	void setPajak(double var_ppn) {
		
		double hrg = harga_sapi ;
		hrg = hrg - (ppn/100*hrg) ;
		
		int harga = (int) hrg ;
		harga_sapi = harga ;
		
	}
	
	
	int getHargaSapi() {
		
		return harga_sapi ;
	}
	
}
